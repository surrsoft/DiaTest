<?xml version="1.0" encoding="utf-8"?>
<!-- фон как у material-карточки -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--этим элементом можно регулировать внешние отступы-->
    <item>
        <shape>
            <padding android:top="5dp" android:right="8dp" android:bottom="0dp" android:left="8dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="0dp" android:right="0dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#d4d4d4" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="0dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#dddddd" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape >
            <solid android:color="#ffffff" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>